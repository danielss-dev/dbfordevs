{
  "$schema": "../gen/schemas/capabilities.json",
  "identifier": "default",
  "description": "Default capabilities for the application",
  "windows": ["*"],
  "permissions": [
    "core:default",
    "shell:default",
    "http:default",
    {
      "identifier": "http:allow-fetch",
      "allow": [
        { "url": "https://api.anthropic.com/*" },
        { "url": "https://generativelanguage.googleapis.com/*" }
      ]
    }
  ]
}
