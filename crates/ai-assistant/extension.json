{
  "id": "ai-assistant",
  "version": "0.1.2",
  "displayName": "AI Query Assistant",
  "description": "Generate SQL from natural language, optimize queries, and explain execution plans using Claude AI",
  "author": {
    "name": "dbfordevs",
    "url": "https://dbfordevs.app"
  },
  "categories": ["ai"],
  "isOfficial": true,
  "capabilities": [
    {
      "type": "command",
      "id": "ai.generateSQL",
      "title": "Generate SQL from Natural Language",
      "shortcut": "Cmd+Shift+G"
    },
    {
      "type": "command",
      "id": "ai.explainQuery",
      "title": "Explain Current Query"
    },
    {
      "type": "command",
      "id": "ai.optimizeQuery",
      "title": "Suggest Query Optimizations"
    },
    {
      "type": "panel",
      "id": "ai.assistant",
      "title": "AI Assistant",
      "location": "right",
      "icon": "sparkles"
    },
    {
      "type": "setting",
      "id": "ai.apiKey",
      "title": "Anthropic API Key",
      "settingType": "password",
      "description": "Your Anthropic API key for Claude access"
    },
    {
      "type": "setting",
      "id": "ai.model",
      "title": "AI Model",
      "settingType": "select",
      "default": "claude-sonnet-4-20250514",
      "description": "The Claude model to use for AI assistance"
    }
  ],
  "activationEvents": [
    "onCommand:ai.generateSQL",
    "onCommand:ai.explainQuery",
    "onView:ai.assistant"
  ],
  "repository": "https://github.com/dbfordevs/dbfordevs",
  "homepage": "https://dbfordevs.app",
  "license": "MIT",
  "minAppVersion": "0.1.0"
}

